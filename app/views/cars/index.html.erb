<h1>Listing cars</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Oc date</th>
    <th>Ac date</th>
    <th>Service date</th>
    <th>Oil date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cars.each do |car| %>
  <tr>
    <td><%= car.name %></td>
    <td><%= car.oc_date %></td>
    <td><%= car.ac_date %></td>
    <td><%= car.service_date %></td>
    <td><%= car.oil_date %></td>
    <td><%= link_to 'Show', car %></td>
    <td><%= link_to 'Edit', edit_car_path(car) %></td>
    <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

